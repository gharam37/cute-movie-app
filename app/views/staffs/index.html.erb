<h1>Search Staff</h1>
<form action="/staffs/search" method="post">
  <input type="text" name="query" placeholder="Enter staff name">
  <button type="submit">Search</button>
</form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      </tr>
  </thead>
  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        </tr>
    <% end %>
  </tbody>
</table>